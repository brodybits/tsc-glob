{
  "name": "glob-tsc",
  "version": "0.0.1-dev",
  "description": "Typescript compiler wrapper to support 'filesGlob' tsconfig.json file option",
  "main": "bin/glob-tsc.js",
  "files": [
    "bin",
    "lib",
    "README.md"
  ],
  "bin": {
    "glob-tsc": "./bin/glob-tsc.js"
  },
  "scripts": {
    "checkjs": "node bin/glob-tsc.js --allowJs --checkJs --noEmit --resolveJsonModule --target es5 -g bin/**/*.js,test/**/*.js",
    "test": "_mocha && node bin/glob-tsc.js --allowJs --checkJs --noEmit -g test/**/*.mock.js",
    "test:watch": "_mocha --watch"
  },
  "keywords": [
    "tsc",
    "glob",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/brodybits/glob-tsc"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.7",
    "chai": "^4.2.0",
    "mocha": "^6.2.2",
    "mock-require": "^3.0.3",
    "typescript": "^3.6.4"
  },
  "peerDependencies": {
    "typescript": "^3.0.0"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "cross-spawn": "^7.0.1",
    "execa": "^3.2.0",
    "glob": "^7.0.5"
  }
}
